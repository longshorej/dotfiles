#!/bin/bash

mkdir -p "$HOME/work/meddle"

mountpoint -q "$HOME/work/meddle" || exit 1

DIRS=(flac mp3hq mp3mq)

for e in "${DIRS[@]}"; do
  if [ -d "$HOME/music/$e" ]; then
    rsync --remove-source-files -a --info=progress2 "$HOME/music/$e" "$HOME/work/meddle/Users/Longshore/Music/"
    find "$HOME/music/$e" -type d -empty -delete
  fi
done
